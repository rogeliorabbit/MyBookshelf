<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light"> <!-- Light.DarkActionBar -->
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <item name="colorError">@color/colorError</item>
        <item name="colorOnError">@color/colorOnError</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>
        <item name="android:colorBackground">@color/colorBackground</item>

        <item  name="android:windowActivityTransitions">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">@color/bottomNavBg</item>

        <item name="elevationOverlayEnabled">true</item>
        <item name="elevationOverlayColor">@color/colorOnSurface</item>

        <item name="alertDialogTheme">@style/AppTheme.Dialog</item>

        <item name="colorNavigationItem">@color/drawer_menu_item_color_state</item>
        <item name="colorNavigationItemSelected">@color/colorWhite</item>
        <item name="drawableNavigationItemBackground">@drawable/drawer_menu_background_color_state</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Light" /> <!-- Dark.DarkActionBar -->

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <!-- Splash -->
    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <!-- NavigationView -->
    <style name="NavigationView" parent="Widget.Design.NavigationView">
        <item name="itemIconTint">?attr/colorNavigationItem</item>
        <item name="itemTextColor">?attr/colorNavigationItem</item>
        <item name="itemBackground">?attr/drawableNavigationItemBackground</item>
    </style>

    <!-- Default Chip -->
    <style name="DefaultChip" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipBackgroundColor">@color/colorDefaultChip</item>
        <item name="android:textColor">@color/colorTextTitle</item>
    </style>

    <!-- Select Chip -->
    <style name="SelectChip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_color_state</item>
        <item name="android:textColor">@color/colorTextTitle</item>
    </style>

    <!-- MaterialDialog -->
    <style name="MaterialDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:background">@color/colorSurface</item>
        <item name="materialButtonStyle">@style/Widget.MaterialComponents.Button.TextButton</item>
        <item name="buttonBarPositiveButtonStyle">@style/Alert.Button.Positive</item>
        <item name="buttonBarNegativeButtonStyle">@style/Alert.Button.Negative</item>
        <item name="buttonBarNeutralButtonStyle">@style/Alert.Button.Neutral</item>
    </style>
    <style name="Alert.Button.Positive" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">@color/colorOnSurface</item>
        <item name="android:textColor">@color/colorSecondary</item>
    </style>
    <style name="Alert.Button.Negative" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">@color/colorOnSurface</item>
        <item name="android:textColor">@color/colorSecondary</item>
    </style>
    <style name="Alert.Button.Neutral" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">@color/colorOnSurface</item>
        <item name="android:textColor">@color/colorSecondary</item>
    </style>

    <!-- MaterialDialog Note -->
    <style name="NoteDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:background">@color/colorPostit</item>
        <item name="buttonBarPositiveButtonStyle">@style/NoteDialog.Positive</item>
        <item name="buttonBarNegativeButtonStyle">@style/NoteDialog.Negative</item>
        <item name="buttonBarNeutralButtonStyle">@style/NoteDialog.Neutral</item>
    </style>
    <style name="NoteDialog.Positive" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">@color/colorOnSurface</item>
        <item name="android:textColor">@color/colorSecondary</item>
    </style>
    <style name="NoteDialog.Negative" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">@color/colorOnSurface</item>
        <item name="android:textColor">@color/colorSecondary</item>
    </style>
    <style name="NoteDialog.Neutral" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">@color/colorOnSurface</item>
        <item name="android:textColor">@color/colorSecondary</item>
    </style>

    <!-- AlertDialog -->
    <style name="AppTheme.Dialog" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@color/colorSurface</item>
        <item name="colorPrimary">@color/colorSecondary</item>
        <item name="colorPrimaryDark">@color/colorOnSurface</item>
        <item name="colorAccent">@color/colorSecondary</item>
    </style>

    <!-- TextInputLayout -->
    <style name="TextField" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu">
        <item name="hintTextColor">@color/colorSecondary</item>
        <item name="endIconTint">?android:attr/textColorSecondary</item>
        <item name="boxStrokeColor">@color/colorSecondary</item>
    </style>

</resources>
